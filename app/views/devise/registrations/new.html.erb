<%  @page_is = 'page-is-sign-in' %>
<div class="v-gap"> </div>
<div class="v-gap"> </div>
<div class="v-gap"> </div>
<h1>注册</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.email_field :email, :autofocus => true, placeholder: 'email', class: 'input-text' %>
  <%= f.password_field :password, placeholder: 'password', class: 'input-text' %>
  <%= f.password_field :password_confirmation,placeholder: 'password_confirmation', class: 'input-text' %>
  <%= f.submit "注册", class: 'btn-submit' %>
<% end %>


